<UserControl x:Class="EducationTesting.Client.Views.EditSubjectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:EducationTesting.Client.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance viewModels:EditSubjectVm}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Название -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 15">
            <TextBlock Text="Название:" 
                       Width="100"
                       VerticalAlignment="Center"
                       FontSize="16"/>
            <TextBox Text="{Binding Item.Name}"
                     Width="300"
                     Padding="8"
                     FontSize="16"/>
        </StackPanel>

        <!-- Описание -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0 0 0 20">
            <TextBlock Text="Описание:" 
                       Width="100"
                       FontSize="16"
                       Margin="0 0 0 5"/>
            <TextBox Text="{Binding Item.Description}"
                     Width="300"
                     Height="150"
                     Padding="8"
                     FontSize="16"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

        <!-- Сообщение об ошибке -->
        <Border Grid.Row="2" 
                Background="#FFF0F0"
                CornerRadius="4"
                Margin="0 0 0 20"
                Visibility="{Binding ErrorMessageProp.Value, Converter={StaticResource StringToVisibility}}">
            <TextBlock Text="{Binding ErrorMessageProp.Value}"
                       Foreground="#CC0000"
                       Margin="10"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Кнопки -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Margin="0 20 0 0">
            <Button Content="Сохранить"
                    Width="120"
                    Height="40"
                    Padding="15 5"
                    FontSize="16"
                    Command="{Binding SaveCommand}"
                    Style="{StaticResource ModernGreenButton}"/>

            <Button Content="Отменить"
                    Width="120"
                    Height="40"
                    Margin="15 0 0 0"
                    Padding="15 5"
                    FontSize="16"
                    Command="{Binding CancelCommand}"
                    Style="{StaticResource ModernRedButton}"/>
        </StackPanel>
    </Grid>
</UserControl>